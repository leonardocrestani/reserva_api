
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mongodb"
  url      = env("DATABASE_URL")
}

model User {
  id String @id @default(auto()) @map("_id") @db.ObjectId
  first_name String
  last_name String
  cpf String
  country String
  email String @unique
  password String @unique
  phone_number String
  created_at DateTime @default(now())
  updated_at DateTime @default(now()) @updatedAt
}